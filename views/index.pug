extends layout
 
block content
 
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
    a.navbar-brand(href='#') GTM Templates
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarCollapse.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item.active
          a.nav-link(href='/')
            | Home 
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='categories') Categories
        li.nav-item
          a.nav-link(href='about') About
        li.nav-item
          a.nav-link(href='contact') Contact
      form.form-inline.mt-2.mt-md-0
        input.form-control.mr-sm-2(type='text' placeholder='Search' aria-label='Search')
        button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
  main.container(role='main')
    .jumbotron
      h1 Featured Custom Template
      p.lead
        | This is the current Featured Custom Template, it's grabbed from Related Products Feed
      a.btn.btn-lg.btn-primary(href='#' role='button') More Details &raquo;
    .container    
    .row      
      each template in templates
          .col-lg-4.col-md-6.mb-4
            .card.h-100(data-ecc-action="impression")&attributes({'data-product-id': template.id,'data-product-name': template.name,'data-product-category': template.category})
              a(href='#')
                img.card-img-top(src='http://placehold.it/700x400' alt='')
              .card-body
                h4.card-title
                  a(href='template/'+template.id+'/'+template.slug+'')= template.name
                span.autor Author: 
                a(href='#')= template.author 
                br
                small Added:#{template.added_date}
                p.card-text
                  | #{template.description}
              .card-footer
                small.text-muted &starf; &starf; &starf; &starf; &star; ( #{template.views} views, #{template.downloads} Downloads ) 
  footer
  .container
    div(align='center')
      | Maintained by 
      a(href='http://www.simoahava.com' target='_blank') Simo Ahava