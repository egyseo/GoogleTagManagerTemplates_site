nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-4
  a.navbar-brand(href='/') GTM Templates
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarCollapse.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item(class={"active": category==="home page"})
        a.nav-link(href='/')&attributes({'data-ga-action':'event','data-ga-event': {category:'cat',action:'act',label:'label',value:undefined,nonint:0}})
          | Home
          span.sr-only (current)
      li.nav-item(class={"active": category==="categories"})
        a.nav-link(href='/categories')&attributes({'data-product-id': template.id,'data-product-name': template.name,'data-product-category': template.category}) Categories
    form.form-inline.mr-auto(action='/search')
      input.form-control.mr-sm-2(name='q' type='text' placeholder='Search' aria-label='Search')
      button.btn.btn-outline-success.my-2.my-sm-0(type='submit' id='search-submit') Search
    ul.nav.navbar-nav.navbar-right
      if !user
        li
          button.btn.btn-success.my-2.my-sm-0#signIn Sign in
      else
        li.dropdown#user
          button.btn.btn-success.my-2.my-sm-0.dropdown-toggle(data-toggle='dropdown')
            strong#userName #{user.name}
          ul.dropdown-menu.dropdown-menu-right
            li
              div.navbar-login
                div.row
                  div.col-lg-12
                    p.text-left
                      strong You are currently signed in.
                    p.text-left
                      small#userEmail #{user.email}
                    p.text-left
                      if user && user.admin
                        a.btn.btn-danger.my-2.my-sm-0(href='/admin') Admin
                        | &nbsp;
                      a.btn.btn-outline-info.my-2.my-sm-0(href='/api/session/logout/') Sign out
